@using DoAnWebFilm.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Film BT</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/fontawesome-free-5.15.4-web/css/all.css">
    <link rel="stylesheet" href="~/Content/PagedList.css">
    <script src="~/Scripts/js/bootstrap.js"></script>

</head>
<body>

    <!-- Header-->
    <header class=" py-3 bg-dark">
        <div class="container-md ">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">

                    @Html.ActionLink("FILM BT", "Index", "AdminHome", null, new { @class = "navbar-brand fs-3" })
                    <div>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="fas fa-list"></span>
                        </button>
                        <button class="navbar-toggler bg-dark"> <i class="fas fa-sign-in-alt text-white"></i></button>

                    </div>

                    <div class="collapse navbar-collapse  justify-content-center" id="navbarNavDropdown">
                        <ul class="navbar-nav">

                            <li class="nav-item">@Html.ActionLink("Trạng Thái", "Index", "AdminTrangThai", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Loại", "Index", "AdminLoai", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Năm Phát Hành", "Index", "AdminNamPhatHanh", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Diễn Viên", "Index", "AdminDienVien", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Quốc Gia", "Index", "AdminQuocGia", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Phim", "Index", "AdminPhim", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Đánh Giá", "Index", "AdminDanhGia", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Bình luận", "Index", "AdminBinhLuan", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("TK Admin", "Index", "AdminManager", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Nguời dùng", "Index", "AdminNguoiDung", null, new { @class = "nav-link" })</li>

                        </ul>
                    </div>

                    <button class="navbar-toggler bg-dark d-none d-lg-block ">
                        <i class="fas fa-sign-in-alt "></i>
                    </button>
                    @{
                        string ten;
                        if (Session["TaiKhoanAdmin"] == null)
                        {
                            ten = "";
                        }
                        else
                        {
                            AdminPro nd = (AdminPro)Session["TaiKhoanAdmin"];
                            ten = nd.ten_admin;
                            <li><a href="#"><i class="fa fa-user-o"></i> Chào: @ten</a></li>
                        }

                    }

                </div>
            </nav>
        </div>
    </header>

    @RenderBody()
    <!--Footer-->
    <footer class="py-3 bg-black text-white-50">
        <div class="container">
            <p class="mb-0">Copyright © 2018 - All Rights Reserved - Domain Name</p>
        </div>
    </footer>

</body>
</html>
