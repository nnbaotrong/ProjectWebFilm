@model IEnumerable<DoAnWebFilm.Models.BinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<section>
    <div class="container-md">
        <div class="my-5 ">
            <div class="my-3 d-flex justify-content-end">

                <div class="">
                    @*<form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-info" type="submit">Search</button>
                        </form>*@
                </div>

            </div>
            <div class="card">
                <div class="card-header bg-info d-flex justify-content-between">
                    <div class="h4 mb-0 mt-1">
                        Quản Bình Luận
                    </div>
             
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="text-center">
                          
                                <th scope="col">Tên phim</th>
                                <th scope="col">Tên người dùng</th>
                                <th scope="col">Bình Luận</th>
                                <th scope="col">Ngày bình luận</th>
                                <th scope="col">Thao tác</th>

                            </tr>
                        </thead>
                        <tbody>
                    
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">

                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phim.ten_phim)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NguoiDung.ten_nguoi_dung)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.noi_dung)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ngay_binh_luan)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Delete", "AdminBinhLuan", new { id = item.id_binh_luan })" class="btn btn-danger mx-1">
                                            <i class="fas fa-trash-alt text-white"></i>
                                        </a>
                                    </td>
                                </tr>
                          
                            }
                        </tbody>
                    </table>

                </div>
            </div>


        </div>

    </div>
</section>
