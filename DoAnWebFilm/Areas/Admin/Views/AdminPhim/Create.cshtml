@model DoAnWebFilm.Models.Phim

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Phim</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p>Tên Phim</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ten_phim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten_phim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Ảnh Bìa Phim</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.anh_bia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.anh_bia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Mô tả</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.mo_ta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>trailer</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.trailer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.trailer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Trạng Thái</p>
        <div class="col-md-10">
            @Html.DropDownList("id_trang_thai", null, new { @class = "form-control" })


        </div>
    </div>

    <div class="form-group">
        <p>Quốc Gia</p>
        <div class="col-md-10">
            @Html.DropDownList("id_quoc_gia", null, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <p>Năm Phát Hành</p>
        <div class="col-md-10">
            @Html.DropDownList("id_nam", null, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <p>Loại</p>
        <div class="col-md-10">
         


            @foreach (var ma in ViewBag.ma_loai)
            {
                <div >
                    <input id="@ma.id_loai" type="checkbox" name="skill" value="@ma.id_loai" />
                    <label for="@ma.id_loai">
                        @ma.ten_loai
                    </label>
                </div>
            }

        </div>

     

    </div>

    <div class="form-group">
        <p>Diễn Viên</p>
        <div class="col-md-10">
           
                @foreach (var ma in ViewBag.ma_dien_vien)
                {
                    <span  style="margin-right:10px" >
                        <input id="@ma.id_dien_vien" type="checkbox" name="skill" value="@ma.id_dien_vien" />
                        <label for="@ma.id_dien_vien">
                            @ma.ten_dien_vien
                        </label>
                    </span>
                }
       
           
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
