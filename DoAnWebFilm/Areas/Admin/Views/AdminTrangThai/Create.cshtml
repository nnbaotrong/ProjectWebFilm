@model DoAnWebFilm.Models.TrangThai

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}





<section>
    <div class="container-md">
        <div class="my-5 ">


            <div class="card">
                <div class="card-header bg-info d-flex justify-content-between">
                    <div class="h4 mb-0 mt-1">
                        Thêm trạng thái
                    </div>

                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()                 
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="mb-3">

                        <label class="form-label">Trạng thái</label>

                        @Html.EditorFor(model => model.ten_trang_thai, new { htmlAttributes = new { @class = "form-control", @minlength = 0, @maxlength = 50 } })
                        <p class="text-danger">@ViewData["Loi"]</p>

                    </div>
                    <div>
                        <input type="submit" value="Thêm" class="btn btn-primary" />

                        @Html.ActionLink("Thoát", "Index", null, new { @class = "btn btn-danger" })
                    </div>

                    }


                </div>
            </div>

        </div>

    </div>
</section>