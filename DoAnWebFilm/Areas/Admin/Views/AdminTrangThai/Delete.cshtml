@model DoAnWebFilm.Models.TrangThai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section>
    <div class="container-md">
        <div class="my-5 ">

            <div class="bg-danger text-white py-2 text-center mb-3 rounded">
                <h4 class=" mb-0">Bạn có thực sự muốn xóa?</h4>
            </div>
            <div class="card">
                <div class="card-header bg-info d-flex justify-content-between">
                    <div class="h4 mb-0 mt-1">
                        Xóa trạng thái
                    </div>

                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Trạng thái
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ten_trang_thai)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                <div>
                    <input type="submit" value="Xóa" class="btn btn-primary" /> 
                    @Html.ActionLink("Thoát", "Index", null, new { @class = "btn btn-danger" })
                </div>
                    }

                </div>
            </div>

        </div>

    </div>
</section>