@model IEnumerable<DoAnWebFilm.Models.QuocGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section>
    <div class="container-md">
        <div class="my-5 ">
            <div class="my-3 d-flex justify-content-end">

                <div class="">
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-info" type="submit">Search</button>
                    </form>
                </div>

            </div>
            <div class="card">
                <div class="card-header bg-info d-flex justify-content-between">
                    <div class="h4 mb-0 mt-1">
                        Quản Lý Quốc Gia
                    </div>
                    <div>
                        @Html.ActionLink("Thêm Quốc Gia", "Create", null, new { @class = "btn btn-success mx-1" })

                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">#</th>
                                <th scope="col">Tên quốc gia</th>

                                <th scope="col">Thao tác</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">

                                    <th scope="col">   @Html.DisplayFor(modelItem => item.id_quoc_gia)</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ten_quoc_gia)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Edit", "AdminQuocGia", new { id = item.id_quoc_gia })" class="btn btn-warning mx-1">
                                            <i class="fas fa-pen text-white"></i>
                                        </a>

                                        <a href="@Url.Action("Delete", "AdminQuocGia", new { id = item.id_quoc_gia })" class="btn btn-danger mx-1">
                                            <i class="fas fa-trash-alt text-white"></i>
                                        </a>

                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>

                </div>
            </div>


        </div>

    </div>
</section>

