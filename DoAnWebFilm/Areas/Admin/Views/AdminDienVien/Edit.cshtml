@model DoAnWebFilm.Models.DienVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<section>
    <div class="container-md">
        <div class="my-5 ">


            <div class="card">
                <div class="card-header bg-info d-flex justify-content-between">
                    <div class="h4 mb-0 mt-1">
                        Sửa diễn viên
                    </div>

                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "AdminDienVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()



                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id_dien_vien)


                    <div class="mb-3">
                        <div class="">
                            <label class="form-label">Tên diễn viên</label>


                            @Html.EditorFor(model => model.ten_dien_vien, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ten_dien_vien, "", new { @class = "text-danger" })

                        </div>
                        

                        <div class="mt-2">
                            <label class="form-label">Ảnh bìa</label>

                            <input type="file" name="fileUpload" class = "form-control" />
                            <img src="@Url.Content("~/HinhDienVien/"+ Model.anh_bia)" width="120" /> (Ảnh hiện tại)
                            @*thong bao trung*@
                            @ViewBag.Thongbao
                        </div>

                        

                    </div>


                    <div>
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        @Html.ActionLink("Thoát", "Index", null, new { @class = "btn btn-danger" })
                    </div>

                            }


                        </div>
                    </div>

        </div>

    </div>
</section>