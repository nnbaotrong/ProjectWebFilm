@model IEnumerable<DoAnWebFilm.Models.DienVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.ten_dien_vien)
        </th>
        <th style="width:500px">
            @Html.DisplayNameFor(model => model.anh_bia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ten_dien_vien)
        </td>
        <td>
            <img class="img-thumbnail" src="@Url.Content("~/HinhDienVien/"+  item.anh_bia)" alt="Loading..." />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_dien_vien }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_dien_vien }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_dien_vien })
        </td>
    </tr>
}

</table>
