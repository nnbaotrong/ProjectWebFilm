@model DoAnWebFilm.Models.BinhLuan

@using (Html.BeginForm("CreateComment", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_phim)
        @Html.HiddenFor(model => model.id_nguoi_dung)

        @Html.EditorFor(model => model.noi_dung, new { htmlAttributes = new { @class = "form-control", @minlength = 1, @maxlength = 200 } })
        @Html.ValidationMessageFor(model => model.noi_dung, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


