@model DoAnWebFilm.Models.Phim
@using DoAnWebFilm.Models;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container-md ">
        <div class="bg-dark p-3 my-2">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item "><a href="#" class="text-white">Home</a></li>
                    <li class="breadcrumb-item"><a href="#" class="text-white">Thể Loại</a></li>
                    <li class="breadcrumb-item"><a href="#" class="text-white"> Hành Động </a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Html.DisplayFor(model => model.ten_phim)</li>
                </ol>
            </nav>
        </div>

        <div class="row gx-2">
            <div class="col-12 col-lg-9">
                <div class=" ">
                    <div class="row gx-1">
                        <div class="col-sm-12 col-md-5 ">
                            <div class="card border-0  ">
                                <img src="@Url.Content("~/HinhPhim/"+ @Html.DisplayFor(model => model.anh_bia))" class="card-img-top" alt="...">
                                <div class="card-header bg-dark d-flex justify-content-center ">

                                    <a href="@Url.Action("WatchMovie","Home", new { id= Model.id_phim} )" style="text-decoration:none">
                                        <button type="button" class="btn btn-warning mx-1 ">Xem Phim</button>
                                    </a>

                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal">
                                        Trailer
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade " id="exampleModal" tabindex="-1"
                                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-xl modal-dialog-centered">
                                            <div class="modal-content ratio ratio-16x9">

                                                <iframe src="@Html.DisplayFor(model => model.trailer)"
                                                        title="YouTube video player" frameborder="0"
                                                        allowfullscreen></iframe>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Modal -->



                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-7">
                            <div class="text-white p-3 py-4 bg-dark">
                                <div class="border-bottom">
                                    <h3>      @Html.DisplayFor(model => model.ten_phim)</h3>
                                </div>
                                <div class="mt-3">
                                    <p>Trạng Thái: @Html.DisplayFor(model => model.TrangThai.ten_trang_thai)</p>
                                    <p>Quốc Gia:  @Html.DisplayFor(model => model.QuocGia.ten_quoc_gia)</p>
                                    <p>Năm Sản Xuất:   @Html.DisplayFor(model => model.NamPhatHanh.nam_phat_hanh)</p>
                                    <p>
                                        Thể Loại:
                                        @foreach (var filmType in Model.ChiTietLoais)
                                        {
                                            <span>@filmType.Loai.ten_loai </span>
                                        }

                                    </p>
                                    <p>Chất lượng: Full HD</p>
                                    <p>Phụ Đề: Tiếng Việt</p>
                                    <p>Lượt Xem: 949 </p>
                                    <p>Công Ty SX: Đang Cập Nhập</p>

                                </div>
                            </div>

                            <div class="bg-dark my-2 p-3 py-5 text-white">
                                <h3>Đánh Giá</h3>
                                <span class="text-warning">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star text-white"></i>
                                </span>

                                <span>(35 lượt)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-dark text-white p-3 my-2">
                    <div class="border-bottom">
                        <h5>Nội dung</h5>

                    </div>
                    <div>
                        <p>
                            @Html.DisplayFor(model => model.mo_ta)
                        </p>
                    </div>
                </div>

                <div>
                    <div class="my-3 p-3 bg-dark text-white shadow-sm">
                        <h5 class="border-bottom pb-2 mb-0">Bình Luận</h5>
                  
                        @Html.Action("ShowComment", "Home", new { id = @Model.id_phim })
            
                        

                    </div>
                </div>

                <div class="bg-dark p-3 my-2 text-white">
                    <h4>Bạn có thể thích xem</h4>
                </div>

                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-3 row-cols-lg-4 gy-3 gx-2 g-gl-0 pb-3 ">

                    @Html.Action("MovieMore", "Home")


                </div>

            </div>



            <div class="col-12 col-lg-3 d-none d-lg-block ">
                <div class=" p-1   ">
                    <h5 class="text-warning">PHIM MỚI</h5>
                    <div class="bg-dark p-2 rounded">

                        @Html.Action("TopMovie", "Home")

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>